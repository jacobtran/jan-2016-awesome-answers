<%# this will be used as a default layout. %>
<!DOCTYPE html>
<html>
<head>
  <title>AwesomeAnswers</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<!-- navigation   -->
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>

      <a class="navbar-left" href="#"><%= image_tag "logo" %></a>
      <a class="navbar-brand navbar-left" href="#">Awesome Answers</a>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav navbar-right data-toggle="collapse" data-target=".navbar-collapse.in">
          <li><a href="<%= about_path %>">About</a></li>
          <li><a href="<%= greet_path('John') %>"> Greet John </a></li>
          <li><%= link_to "Hello", hello_path %></li>
          <li><%= link_to "Subscribe", subscribe_path %></li>
          <li><%= link_to "New Question", new_question_path %></li>
          <li><%= link_to "All Questions", questions_path %></li>

          <% if session[:user_id] %>
            <li><%= link_to "Favourites", favourites_path %></li>
            <li><a href="#">Hello <%= current_user.first_name %></a></li>
            <li><%= link_to "Log out", sessions_path, method: :delete %></li>
          <% else %>
            <li><%= link_to "Sign Up", new_user_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>

