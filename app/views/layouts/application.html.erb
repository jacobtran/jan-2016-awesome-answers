<%#= flash[:notice] || flash[:alert] %>

<!-- notice and alerts -->
<% if notice %>
  <div class="alert alert-success alert-dismissible">
    <strong><%= notice %></strong>
  </div>
<% end %>

<% if alert %>
  <div class="alert alert-danger alert-dismissible">
    <strong><%= alert %></strong>
  </div>
<% end %>
<%#= notice || alert %>

<%= yield %>

</body>
</html>
